<Window x:Class="WfpTrafficControl.UI.Views.ApplicationDiscoveryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WfpTrafficControl.UI.ViewModels"
        xmlns:converters="clr-namespace:WfpTrafficControl.UI.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:ApplicationDiscoveryViewModel}"
        Title="Application Discovery"
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility" />
        <converters:InverseBoolConverter x:Key="InverseBool" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="16" Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Application Discovery"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <TextBlock Text="Scan installed applications and suggest firewall rules"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,4,0,0" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Scan Applications"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ScanCommand}"
                            IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBool}}"
                            Padding="16,8"
                            Margin="0,0,8,0" />
                    <Button Content="Signatures"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ShowSignaturesCommand}"
                            Padding="12,8"
                            ToolTip="View known application signatures" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics and Filters -->
        <Border Grid.Row="1" Padding="16" Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Statistics -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="12,8" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding TotalApplications}"
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text=" Total"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="12,8" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding CoveredApplications}"
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="{DynamicResource SuccessBrush}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text=" Covered"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="12,8" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding UncoveredApplications}"
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="{DynamicResource WarningBrush}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text=" Uncovered"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Padding="12,8" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding KnownApplications}"
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="{DynamicResource AccentBrush}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text=" Known"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0" />
                    </StackPanel>
                </Border>

                <!-- Filters -->
                <TextBox Grid.Column="5"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Width="180"
                         Margin="0,0,8,0"
                         ToolTip="Search applications..." />

                <ComboBox Grid.Column="6"
                          ItemsSource="{x:Static vm:ApplicationDiscoveryViewModel.AvailableCategoryFilters}"
                          SelectedValue="{Binding SelectedCategoryFilter}"
                          Width="130"
                          Margin="0,0,8,0" />

                <ComboBox Grid.Column="7"
                          ItemsSource="{x:Static vm:ApplicationDiscoveryViewModel.AvailableCoverageFilters}"
                          SelectedValue="{Binding SelectedCoverageFilter}"
                          Width="130" />
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <!-- Applications List -->
            <Border Grid.Column="0" Margin="16" Style="{StaticResource CardStyle}">
                <Grid>
                    <ListView ItemsSource="{Binding FilteredApplications}"
                              SelectedItem="{Binding SelectedApplication}"
                              Background="Transparent"
                              BorderThickness="0"
                              Visibility="{Binding IsScanning, Converter={StaticResource InverseBoolToVisibility}}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Text="{Binding Publisher}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Coverage" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{DynamicResource WarningBackgroundBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CoverageStatus}" Value="FullyCovered">
                                                                <Setter Property="Background" Value="{DynamicResource SuccessBackgroundBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding CoverageStatus}" Value="PartiallyCovered">
                                                                <Setter Property="Background" Value="{DynamicResource AccentBackgroundBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding CoverageStatus}" Value="Unknown">
                                                                <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Uncovered" />
                                                            <Setter Property="Foreground" Value="{DynamicResource WarningBrush}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding CoverageStatus}" Value="FullyCovered">
                                                                    <Setter Property="Text" Value="Covered" />
                                                                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding CoverageStatus}" Value="PartiallyCovered">
                                                                    <Setter Property="Text" Value="Partial" />
                                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding CoverageStatus}" Value="Unknown">
                                                                    <Setter Property="Text" Value="Unknown" />
                                                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Known" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="-" />
                                                        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsKnownApplication}" Value="True">
                                                                <Setter Property="Text" Value="Yes" />
                                                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Suggestions" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Foreground="{DynamicResource TextSecondaryBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="-" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SuggestedRules.Count, FallbackValue=0}" Value="0">
                                                                <Setter Property="Text" Value="-" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                                <Run Text="{Binding SuggestedRules.Count, Mode=OneWay}" />
                                                <Run Text=" rules" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Version" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Version, TargetNullValue='-'}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Scanning Indicator -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Scanning applications..."
                                   FontSize="14"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>

                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding Applications.Count, Converter={StaticResource InverseBoolToVisibility}}">
                        <TextBlock Text="Click 'Scan Applications' to discover installed applications"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Visibility="{Binding IsScanning, Converter={StaticResource InverseBoolToVisibility}}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <Border Grid.Column="1" Margin="0,16,16,16" Style="{StaticResource CardStyle}" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Visibility="{Binding SelectedApplication, Converter={StaticResource BoolToVisibility}}">
                        <!-- Application Info -->
                        <TextBlock Text="{Binding SelectedApplication.Name}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="{Binding SelectedApplication.Publisher}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,12" />

                        <!-- Path -->
                        <TextBlock Text="Executable Path" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,4" />
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding SelectedApplication.ExecutablePath, Mode=OneWay}"
                                     IsReadOnly="True"
                                     FontSize="11" />
                            <Button Grid.Column="1"
                                    Content="Copy"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding CopyPathCommand}"
                                    Padding="8,4"
                                    Margin="8,0,0,0" />
                        </Grid>

                        <!-- Version -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Version: " Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBlock Grid.Column="1" Text="{Binding SelectedApplication.Version, TargetNullValue='Unknown'}"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                        </Grid>

                        <!-- Coverage Status -->
                        <Border CornerRadius="4" Padding="12" Margin="0,0,0,16">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource WarningBackgroundBrush}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedApplication.CoverageStatus}" Value="FullyCovered">
                                            <Setter Property="Background" Value="{DynamicResource SuccessBackgroundBrush}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedApplication.CoverageStatus}" Value="PartiallyCovered">
                                            <Setter Property="Background" Value="{DynamicResource AccentBackgroundBrush}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="No Coverage" />
                                            <Setter Property="Foreground" Value="{DynamicResource WarningBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedApplication.CoverageStatus}" Value="FullyCovered">
                                                    <Setter Property="Text" Value="Fully Covered" />
                                                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedApplication.CoverageStatus}" Value="PartiallyCovered">
                                                    <Setter Property="Text" Value="Partially Covered" />
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock FontSize="11" Margin="0,4,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="No firewall rules exist for this application." />
                                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedApplication.CoverageStatus}" Value="FullyCovered">
                                                    <Setter Property="Text" Value="This application has firewall rules configured." />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedApplication.CoverageStatus}" Value="PartiallyCovered">
                                                    <Setter Property="Text" Value="Some firewall rules exist but more may be needed." />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Suggested Rules -->
                        <TextBlock Text="Suggested Rules"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"
                                   Visibility="{Binding SelectedApplication.IsKnownApplication, Converter={StaticResource BoolToVisibility}}" />

                        <ItemsControl ItemsSource="{Binding SelectedApplication.SuggestedRules}"
                                      Margin="0,0,0,12"
                                      Visibility="{Binding SelectedApplication.IsKnownApplication, Converter={StaticResource BoolToVisibility}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardStyle}" Padding="12" Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Description}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                                            <TextBlock FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0">
                                                <Run Text="{Binding Action, Mode=OneWay}" />
                                                <Run Text=" " />
                                                <Run Text="{Binding Direction, Mode=OneWay}" />
                                                <Run Text=" " />
                                                <Run Text="{Binding Protocol, Mode=OneWay}" />
                                            </TextBlock>
                                            <TextBlock Text="{Binding Comment}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       TextWrapping="Wrap"
                                                       Margin="0,4,0,0"
                                                       Visibility="{Binding Comment, Converter={StaticResource BoolToVisibility}}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Not a Known App -->
                        <Border Style="{StaticResource CardStyle}" Padding="12"
                                Visibility="{Binding SelectedApplication.IsKnownApplication, Converter={StaticResource InverseBoolToVisibility}}">
                            <TextBlock Text="No suggested rules available for this application. You can create custom rules in the Policy Editor."
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" />
                        </Border>

                        <!-- Apply Button -->
                        <Button Content="Apply Suggested Rules"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding ApplySuggestedRulesCommand}"
                                Padding="16,10"
                                Margin="0,16,0,0"
                                Visibility="{Binding SelectedApplication.IsKnownApplication, Converter={StaticResource BoolToVisibility}}" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="3"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" />

                <Button Grid.Column="1"
                        Content="Close"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="CloseButton_Click"
                        Padding="16,8" />
            </Grid>
        </Border>
    </Grid>
</Window>
