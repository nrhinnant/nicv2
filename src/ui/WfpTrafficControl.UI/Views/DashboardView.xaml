<UserControl x:Class="WfpTrafficControl.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WfpTrafficControl.UI.ViewModels"
             xmlns:converters="clr-namespace:WfpTrafficControl.UI.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel}"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Status Cards Row -->
            <TextBlock Grid.Row="0"
                       Text="System Status"
                       Style="{StaticResource SubheaderTextStyle}"
                       Margin="0,0,0,16" />

            <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="0,0,0,24">
                <!-- Service Status Card -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Service"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,8" />
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource OfflineBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource OnlineBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding ServiceStatusText}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock Margin="0,8,0,0"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12">
                            <Run Text="Version: " />
                            <Run Text="{Binding ServiceVersion, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Filter Count Card -->
                <Border Style="{StaticResource CardStyle}" Margin="6,0">
                    <StackPanel>
                        <TextBlock Text="Active Filters"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,8" />
                        <TextBlock Text="{Binding FilterCount}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}" />
                        <TextBlock Text="WFP filters installed"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Border>

                <!-- Policy Status Card -->
                <Border Style="{StaticResource CardStyle}" Margin="6,0">
                    <StackPanel>
                        <TextBlock Text="Policy"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,8" />
                        <TextBlock FontSize="18"
                                   FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Not Applied" />
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasPolicyApplied}" Value="True">
                                            <Setter Property="Text" Value="{Binding PolicyVersion}" />
                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,8,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="No policy active" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasPolicyApplied}" Value="True">
                                            <Setter Property="Text" Value="Policy version" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- LKG Status Card -->
                <Border Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Last Known Good"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,8" />
                        <TextBlock Text="{Binding LkgStatusText}"
                                   FontSize="18"
                                   FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasLkg}" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,8,0,0"
                                   Visibility="{Binding HasLkg, Converter={StaticResource BoolToVisibility}}">
                            <Run Text="{Binding LkgPolicyVersion, Mode=OneWay}" />
                            <Run Text=" (" /><Run Text="{Binding LkgRuleCount, Mode=OneWay}" /><Run Text=" rules)" />
                        </TextBlock>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Quick Actions -->
            <TextBlock Grid.Row="2"
                       Text="Quick Actions"
                       Style="{StaticResource SubheaderTextStyle}"
                       Margin="0,0,0,16" />

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,32,0,24">
                <Button Content="Apply Policy..."
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding ApplyPolicyCommand}"
                        IsEnabled="{Binding IsConnected}"
                        Margin="0,0,12,0" />

                <Button Content="Rollback"
                        Style="{StaticResource DangerButtonStyle}"
                        Command="{Binding RollbackCommand}"
                        IsEnabled="{Binding IsConnected}"
                        Margin="0,0,12,0" />

                <Button Content="Revert to LKG"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding RevertToLkgCommand}"
                        IsEnabled="{Binding HasLkg}"
                        Margin="0,0,12,0" />

                <Button Content="Refresh"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding RefreshStatusCommand}"
                        Margin="0,0,12,0" />

                <Button Content="Validate JSON..."
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ValidateJsonCommand}"
                        IsEnabled="{Binding IsConnected}"
                        ToolTip="Validate policy JSON without saving to a file" />

                <!-- Loading Indicators -->
                <TextBlock Text="Applying..."
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Visibility="{Binding IsApplying, Converter={StaticResource BoolToVisibility}}" />

                <TextBlock Text="Rolling back..."
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Visibility="{Binding IsRollingBack, Converter={StaticResource BoolToVisibility}}" />

                <TextBlock Text="Reverting..."
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Visibility="{Binding IsRevertingToLkg, Converter={StaticResource BoolToVisibility}}" />

                <TextBlock Text="Validating..."
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Visibility="{Binding IsValidating, Converter={StaticResource BoolToVisibility}}" />
            </StackPanel>

            <!-- Hot Reload Section -->
            <Grid Grid.Row="3" Margin="0,0,0,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Hot Reload"
                           Style="{StaticResource SubheaderTextStyle}"
                           Margin="0,0,0,16" />

                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Status indicator and text -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="12" Height="12"
                                     VerticalAlignment="Center"
                                     Margin="0,0,12,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource OfflineBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsWatching}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource OnlineBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <StackPanel>
                                <TextBlock Text="{Binding WatchStatusText}"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                                <TextBlock Text="{Binding WatchedFilePath}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="12"
                                           TextTrimming="CharacterEllipsis"
                                           MaxWidth="400"
                                           Visibility="{Binding IsWatching, Converter={StaticResource BoolToVisibility}}" />
                                <TextBlock Text="{Binding WatchLastError}"
                                           Foreground="{StaticResource ErrorBrush}"
                                           FontSize="12"
                                           TextTrimming="CharacterEllipsis"
                                           MaxWidth="400"
                                           Visibility="{Binding WatchLastError, Converter={StaticResource BoolToVisibility}}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Action buttons -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="Enable..."
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding EnableWatchCommand}"
                                    IsEnabled="{Binding IsConnected}"
                                    Visibility="{Binding IsWatching, Converter={StaticResource InverseBoolToVisibility}}"
                                    Margin="0,0,8,0" />
                            <Button Content="Disable"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding DisableWatchCommand}"
                                    IsEnabled="{Binding IsConnected}"
                                    Visibility="{Binding IsWatching, Converter={StaticResource BoolToVisibility}}" />

                            <TextBlock Text="Setting..."
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Visibility="{Binding IsSettingWatch, Converter={StaticResource BoolToVisibility}}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Maintenance Section -->
            <Expander Grid.Row="4"
                      Header="Maintenance (Advanced)"
                      Margin="0,0,0,24"
                      IsExpanded="False">
                <Border Style="{StaticResource CardStyle}" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="These commands are for troubleshooting and emergency recovery."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,16" />

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Re-initialize WFP"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding BootstrapCommand}"
                                    IsEnabled="{Binding IsConnected}"
                                    ToolTip="Ensure WFP provider and sublayer are created"
                                    Margin="0,0,12,0" />

                            <Button Content="Teardown All"
                                    Style="{StaticResource DangerButtonStyle}"
                                    Command="{Binding TeardownCommand}"
                                    IsEnabled="{Binding IsConnected}"
                                    ToolTip="Remove all WFP objects (emergency recovery)" />

                            <TextBlock Text="Initializing..."
                                       VerticalAlignment="Center"
                                       Margin="16,0,0,0"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Visibility="{Binding IsBootstrapping, Converter={StaticResource BoolToVisibility}}" />

                            <TextBlock Text="Tearing down..."
                                       VerticalAlignment="Center"
                                       Margin="16,0,0,0"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Visibility="{Binding IsTearingDown, Converter={StaticResource BoolToVisibility}}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Expander>

            <!-- Recent Activity -->
            <Grid Grid.Row="5" Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Recent Activity"
                           Style="{StaticResource SubheaderTextStyle}"
                           Margin="0,0,0,16" />

                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="0">
                    <DataGrid ItemsSource="{Binding RecentActivity}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              Background="Transparent"
                              RowBackground="{StaticResource CardBackgroundBrush}"
                              AlternatingRowBackground="#FAFAFA"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time"
                                                Binding="{Binding Timestamp}"
                                                Width="180" />
                            <DataGridTextColumn Header="Event"
                                                Binding="{Binding Event}"
                                                Width="140" />
                            <DataGridTextColumn Header="Status"
                                                Binding="{Binding Status}"
                                                Width="80" />
                            <DataGridTextColumn Header="Details"
                                                Width="*">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} filters created, {1} removed">
                                        <Binding Path="FiltersCreated" />
                                        <Binding Path="FiltersRemoved" />
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Empty state -->
                <Border Grid.Row="1"
                        Style="{StaticResource CardStyle}"
                        Visibility="{Binding RecentActivity.Count, Converter={StaticResource InverseBoolToVisibility}}">
                    <TextBlock Text="No recent activity"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Padding="24" />
                </Border>
            </Grid>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="6"
                    Background="#80FFFFFF"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Loading..."
                               FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}" />
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
