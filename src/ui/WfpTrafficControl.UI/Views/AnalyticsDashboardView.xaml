<UserControl x:Class="WfpTrafficControl.UI.Views.AnalyticsDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WfpTrafficControl.UI.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:converters="clr-namespace:WfpTrafficControl.UI.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:AnalyticsDashboardViewModel}"
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="{DynamicResource BackgroundBrush}"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Toolbar -->
            <RowDefinition Height="Auto" />
            <!-- Stats Cards -->
            <RowDefinition Height="Auto" />
            <!-- Charts -->
            <RowDefinition Height="*" />
            <!-- Status Bar -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0"
                           Text="Connection Analytics"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center" />

                <!-- Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="32,0,0,0" VerticalAlignment="Center">
                    <CheckBox Content="Auto-collect"
                              IsChecked="{Binding AutoRefresh}"
                              VerticalAlignment="Center" />
                    <TextBlock Text="Time range:"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="24,0,8,0" />
                    <ComboBox ItemsSource="{x:Static vm:AnalyticsDashboardViewModel.AvailableTimeRanges}"
                              SelectedValue="{Binding SelectedTimeRange}"
                              Width="100" />
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding CollectDataCommand}"
                            Padding="16,6"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="Collect Now" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ClearDataCommand}"
                            Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="Clear Data" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="16,16,16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Total Connections Card -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="Total Connections"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    <TextBlock Text="{Binding TotalConnections}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,4,0,0" />
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="TCP: "
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Text="{Binding TcpConnections}"
                                   FontSize="12"
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="  UDP: "
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Text="{Binding UdpConnections}"
                                   FontSize="12"
                                   Foreground="{DynamicResource WarningBrush}"
                                   FontWeight="SemiBold" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Established Card -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="Established"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    <TextBlock Text="{Binding EstablishedConnections}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource SuccessBrush}"
                               Margin="0,4,0,0" />
                    <TextBlock Text="Active connections"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,8,0,0" />
                </StackPanel>
            </Border>

            <!-- Listening Card -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="8,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="Listening Ports"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    <TextBlock Text="{Binding ListeningPorts}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               Margin="0,4,0,0" />
                    <TextBlock Text="Open server ports"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,8,0,0" />
                </StackPanel>
            </Border>

            <!-- Top Process Card -->
            <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="8,0,0,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="Top Process"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                    <TextBlock Text="{Binding TopProcess}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,4,0,0"
                               TextTrimming="CharacterEllipsis"
                               ToolTip="{Binding TopProcess}" />
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="{Binding TopProcessCount}"
                                   FontSize="12"
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   FontWeight="SemiBold" />
                        <TextBlock Text=" connections"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Charts -->
        <Grid Grid.Row="2" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Connections Over Time Chart -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" Margin="0,0,0,8" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Connections Over Time"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8" />

                    <lvc:CartesianChart Grid.Row="1"
                                        Series="{Binding ConnectionsSeries}"
                                        XAxes="{Binding ConnectionsXAxes}"
                                        YAxes="{Binding ConnectionsYAxes}"
                                        LegendPosition="Right"
                                        ZoomMode="X" />
                </Grid>
            </Border>

            <!-- Top Processes List -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,8,8,0" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Top Processes"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8" />

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding TopProcesses}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0"
                              Background="Transparent"
                              RowBackground="{DynamicResource CardBackgroundBrush}"
                              AlternatingRowBackground="{DynamicResource DataGridAlternateRowBrush}"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Total" Binding="{Binding ConnectionCount}" Width="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="TCP" Binding="{Binding TcpCount}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="UDP" Binding="{Binding UdpCount}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                        <Setter Property="Foreground" Value="{DynamicResource WarningBrush}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="%" Binding="{Binding Percentage, StringFormat={}{0:F1}%}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- State Distribution -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,8,0,0" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Connection States"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8" />

                    <lvc:PieChart Grid.Row="1"
                                  Series="{Binding StateSeries}"
                                  LegendPosition="Bottom" />

                    <ItemsControl Grid.Row="2" ItemsSource="{Binding StateDistribution}" Margin="0,8,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding State}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Grid.Column="1"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextPrimaryBrush}">
                                        <Run Text="{Binding Count, Mode=OneWay}" />
                                        <Run Text=" (" /><Run Text="{Binding Percentage, StringFormat={}{0:F1}, Mode=OneWay}" /><Run Text="%)" />
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}" />

                <TextBlock Grid.Column="1"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,0,24,0">
                    <Run Text="Snapshots: " />
                    <Run Text="{Binding SnapshotCount, Mode=OneWay}" FontWeight="SemiBold" />
                </TextBlock>

                <TextBlock Grid.Column="2"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="11">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LastRefresh}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <Run Text="Last: " />
                    <Run Text="{Binding LastRefresh, Mode=OneWay, StringFormat={}{0:HH:mm:ss}}" />
                </TextBlock>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="4"
                Style="{StaticResource LoadingOverlayStyle}"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <TextBlock Text="Collecting data..."
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="{DynamicResource TextSecondaryBrush}" />
        </Border>
    </Grid>
</UserControl>
