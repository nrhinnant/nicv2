<UserControl x:Class="WfpTrafficControl.UI.Views.PolicyEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WfpTrafficControl.UI.ViewModels"
             xmlns:converters="clr-namespace:WfpTrafficControl.UI.Converters"
             xmlns:controls="clr-namespace:WfpTrafficControl.UI.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:PolicyEditorViewModel}"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{DynamicResource BackgroundBrush}"
             Focusable="True">

    <!-- Keyboard Shortcuts -->
    <UserControl.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="{Binding NewPolicyCommand}" />
        <KeyBinding Key="O" Modifiers="Control" Command="{Binding LoadPolicyCommand}" />
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SavePolicyCommand}" />
        <KeyBinding Key="S" Modifiers="Control+Shift" Command="{Binding SavePolicyAsCommand}" />
        <KeyBinding Key="Z" Modifiers="Control" Command="{Binding UndoCommand}" />
        <KeyBinding Key="Y" Modifiers="Control" Command="{Binding RedoCommand}" />
        <KeyBinding Key="D" Modifiers="Control" Command="{Binding CopyRuleCommand}" />
        <KeyBinding Key="Delete" Command="{Binding DeleteRuleCommand}" />
        <KeyBinding Key="Up" Modifiers="Alt" Command="{Binding MoveRuleUpCommand}" />
        <KeyBinding Key="Down" Modifiers="Alt" Command="{Binding MoveRuleDownCommand}" />
    </UserControl.InputBindings>

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility" />
        <converters:InverseBoolConverter x:Key="InverseBool" />
        <converters:ObjectToBoolConverter x:Key="ObjectToBool" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Toolbar -->
            <RowDefinition Height="Auto" />
            <!-- Content -->
            <RowDefinition Height="*" />
            <!-- Validation Bar -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- File Operations -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding NewPolicyCommand}"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            ToolTip="New Policy (Ctrl+N)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="New" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding LoadPolicyCommand}"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            ToolTip="Open Policy (Ctrl+O)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="Open" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding SavePolicyCommand}"
                            IsEnabled="{Binding HasPolicy}"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            ToolTip="Save Policy (Ctrl+S)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="Save" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding SavePolicyAsCommand}"
                            IsEnabled="{Binding HasPolicy}"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            ToolTip="Save Policy As (Ctrl+Shift+S)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE792;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="Save As..." VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Undo/Redo Separator -->
                    <Border BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1,0,0,0"
                            Margin="8,0,8,0" />

                    <!-- Undo Button -->
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding UndoCommand}"
                            IsEnabled="{Binding CanUndo}"
                            Padding="12,6"
                            Margin="0,0,8,0">
                        <Button.ToolTip>
                            <TextBlock>
                                <Run Text="Undo" />
                                <Run Text="{Binding UndoDescription, StringFormat='({0})'}" />
                                <Run Text=" (Ctrl+Z)" />
                            </TextBlock>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7A7;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="Undo" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Redo Button -->
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding RedoCommand}"
                            IsEnabled="{Binding CanRedo}"
                            Padding="12,6"
                            Margin="0,0,8,0">
                        <Button.ToolTip>
                            <TextBlock>
                                <Run Text="Redo" />
                                <Run Text="{Binding RedoDescription, StringFormat='({0})'}" />
                                <Run Text=" (Ctrl+Y)" />
                            </TextBlock>
                        </Button.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7A6;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="Redo" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Templates Dropdown -->
                    <Border BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1,0,0,0"
                            Margin="8,0,16,0"
                            Padding="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Templates:"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,8,0" />
                            <ComboBox x:Name="TemplateComboBox"
                                      ItemsSource="{Binding Templates}"
                                      Width="200"
                                      ToolTip="Load a pre-configured policy template">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                            <TextBlock Text=" - " Foreground="{DynamicResource TextSecondaryBrush}" />
                                            <TextBlock Text="{Binding Category}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontStyle="Italic" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding LoadFromTemplateCommand}"
                                    CommandParameter="{Binding SelectedItem, ElementName=TemplateComboBox}"
                                    IsEnabled="{Binding SelectedItem, ElementName=TemplateComboBox, Converter={StaticResource ObjectToBool}}"
                                    Padding="12,6"
                                    Margin="8,0,0,0"
                                    ToolTip="Load the selected template">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Load" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Current File -->
                    <TextBlock VerticalAlignment="Center"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Visibility="{Binding HasPolicy, Converter={StaticResource BoolToVisibility}}">
                        <Run Text="File: " />
                        <Run Text="{Binding CurrentFilePath, Mode=OneWay}" />
                        <Run Text="*" Foreground="{DynamicResource WarningBrush}">
                            <Run.Style>
                                <Style TargetType="Run">
                                    <Setter Property="Text" Value="" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasUnsavedChanges}" Value="True">
                                            <Setter Property="Text" Value=" *" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Run.Style>
                        </Run>
                    </TextBlock>
                </StackPanel>

                <!-- Policy Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ValidatePolicyCommand}"
                            IsEnabled="{Binding HasPolicy}"
                            Padding="12,6"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E0;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="Validate" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ApplyPolicyCommand}"
                            IsEnabled="{Binding HasPolicy}"
                            Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                            <TextBlock Text="Apply to Service" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <!-- No Policy State -->
            <Border Style="{StaticResource CardStyle}"
                    Visibility="{Binding HasPolicy, Converter={StaticResource InverseBoolToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel HorizontalAlignment="Center" MaxWidth="900">
                        <TextBlock Text="No Policy Loaded"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16" />
                        <TextBlock Text="Create a new policy, open an existing one, or start from a template."
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,24" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,32">
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding NewPolicyCommand}"
                                    Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                                    <TextBlock Text="New Policy" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding LoadPolicyCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                                    <TextBlock Text="Open Policy" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Templates Section -->
                        <Border BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="0,24,0,0">
                            <StackPanel>
                                <TextBlock Text="Quick Start Templates"
                                           Style="{StaticResource SubheaderTextStyle}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8" />
                                <TextBlock Text="Choose a pre-configured template to get started quickly. You can customize rules after loading."
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,24" />

                                <!-- Template Cards -->
                                <ItemsControl ItemsSource="{Binding Templates}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel HorizontalAlignment="Center" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource CardBackgroundBrush}"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Width="260"
                                                    Margin="8"
                                                    Padding="16">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <!-- Category Badge -->
                                                    <Border Grid.Row="0"
                                                            HorizontalAlignment="Left"
                                                            CornerRadius="3"
                                                            Padding="8,2"
                                                            Margin="0,0,0,8">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Category}" Value="Privacy">
                                                                        <Setter Property="Background" Value="#6B5B95" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Category}" Value="Security">
                                                                        <Setter Property="Background" Value="{DynamicResource ErrorBrush}" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Category}" Value="Productivity">
                                                                        <Setter Property="Background" Value="{DynamicResource SuccessBrush}" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Category}" Value="Development">
                                                                        <Setter Property="Background" Value="{DynamicResource WarningBrush}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding Category}"
                                                                   Foreground="White"
                                                                   FontSize="10"
                                                                   FontWeight="SemiBold" />
                                                    </Border>

                                                    <!-- Template Name -->
                                                    <TextBlock Grid.Row="1"
                                                               Text="{Binding Name}"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,0,8" />

                                                    <!-- Description -->
                                                    <TextBlock Grid.Row="2"
                                                               Text="{Binding Description}"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               FontSize="12"
                                                               TextWrapping="Wrap"
                                                               TextTrimming="CharacterEllipsis"
                                                               MaxHeight="80"
                                                               Margin="0,0,0,12" />

                                                    <!-- Load Button -->
                                                    <Button Grid.Row="3"
                                                            Style="{StaticResource SecondaryButtonStyle}"
                                                            Command="{Binding DataContext.LoadFromTemplateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            HorizontalAlignment="Stretch"
                                                            Padding="8,6">
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                                                            <TextBlock Text="Load Template" VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Policy Editor -->
            <Grid Visibility="{Binding HasPolicy, Converter={StaticResource BoolToVisibility}}">
                <Grid.ColumnDefinitions>
                    <!-- Rules List -->
                    <ColumnDefinition Width="300" />
                    <!-- Splitter -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Rule Detail -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Rules List Panel -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Policy Header -->
                        <Border Grid.Row="0"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Policy Version"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <TextBox Grid.Row="1" Grid.Column="0"
                                         Text="{Binding PolicyVersion, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,4,8,0" />

                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="Default"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ComboBox Grid.Row="1" Grid.Column="1"
                                          SelectedValue="{Binding DefaultAction}"
                                          Width="80"
                                          Margin="0,4,0,0">
                                    <ComboBoxItem Content="allow" />
                                    <ComboBoxItem Content="block" />
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- Rules Header with Search -->
                        <Border Grid.Row="1"
                                Background="{DynamicResource CardBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Rules Count and Filter -->
                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" FontWeight="SemiBold" VerticalAlignment="Center">
                                        <Run Text="Rules (" />
                                        <Run Text="{Binding FilteredRuleCount, Mode=OneWay}" />
                                        <Run Text="/" />
                                        <Run Text="{Binding Rules.Count, Mode=OneWay}" />
                                        <Run Text=")" />
                                    </TextBlock>
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{x:Static vm:PolicyEditorViewModel.AvailableActionFilters}"
                                              SelectedValue="{Binding ActionFilter}"
                                              Width="70"
                                              ToolTip="Filter by action" />
                                </Grid>

                                <!-- Search Box -->
                                <controls:SearchFilterControl Grid.Row="1"
                                                              SearchText="{Binding SearchText, Mode=TwoWay}"
                                                              Placeholder="Search rules..." />
                            </Grid>
                        </Border>

                        <!-- Rules List -->
                        <ListBox Grid.Row="2"
                                 ItemsSource="{Binding RulesView}"
                                 SelectedItem="{Binding SelectedRule}"
                                 Style="{StaticResource RulesListBoxStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8,6"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!-- Enabled Checkbox -->
                                            <CheckBox Grid.RowSpan="2"
                                                      IsChecked="{Binding Enabled}"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,8,0" />

                                            <!-- Rule ID, Priority Badge, and Action -->
                                            <StackPanel Grid.Row="0" Grid.Column="1"
                                                        Orientation="Horizontal">
                                                <!-- Priority Badge -->
                                                <Border CornerRadius="3"
                                                        Padding="6,2"
                                                        Margin="0,0,8,0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding PriorityBadgeColor}" />
                                                    </Border.Background>
                                                    <TextBlock Text="{Binding PriorityDisplay}"
                                                               Foreground="White"
                                                               FontSize="10"
                                                               FontWeight="SemiBold" />
                                                </Border>
                                                <TextBlock Text="{Binding Id}"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="120" />
                                                <Border CornerRadius="3"
                                                        Padding="6,2"
                                                        Margin="8,0,0,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="{DynamicResource SuccessBrush}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Action}" Value="block">
                                                                    <Setter Property="Background" Value="{DynamicResource ErrorBrush}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Action}"
                                                               Foreground="White"
                                                               FontSize="10"
                                                               FontWeight="SemiBold" />
                                                </Border>
                                            </StackPanel>

                                            <!-- Summary -->
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis">
                                                <Run Text="{Binding Direction, Mode=OneWay}" />
                                                <Run Text=" " />
                                                <Run Text="{Binding Protocol, Mode=OneWay}" />
                                                <Run Text=" - " />
                                                <Run Text="{Binding Summary, Mode=OneWay}" />
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Rule Actions -->
                        <Border Grid.Row="3"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="8">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="+"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding AddRuleCommand}"
                                        Width="32" Height="32"
                                        Padding="0"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        ToolTip="Add Rule" />
                                <Button Content="-"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding DeleteRuleCommand}"
                                        Width="32" Height="32"
                                        Padding="0"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Margin="4,0,0,0"
                                        ToolTip="Delete Rule (Delete)" />
                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding CopyRuleCommand}"
                                        Padding="8,0"
                                        Height="32"
                                        Margin="4,0,0,0"
                                        ToolTip="Duplicate Rule (Ctrl+D)">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center" />
                                        <TextBlock Text="Copy" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding MoveRuleUpCommand}"
                                        Padding="8,0"
                                        Height="32"
                                        Margin="8,0,0,0"
                                        ToolTip="Move Up (Alt+Up)">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE74A;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center" />
                                        <TextBlock Text="Up" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding MoveRuleDownCommand}"
                                        Padding="8,0"
                                        Height="32"
                                        Margin="4,0,0,0"
                                        ToolTip="Move Down (Alt+Down)">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE74B;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center" />
                                        <TextBlock Text="Down" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Splitter -->
                <GridSplitter Grid.Column="1"
                              Width="8"
                              Background="Transparent"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch" />

                <!-- Rule Detail Panel -->
                <Border Grid.Column="2"
                        Style="{StaticResource CardStyle}"
                        Margin="8,0,0,0"
                        DataContext="{Binding SelectedRule}">
                    <Grid>
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      Visibility="{Binding DataContext.SelectedRule, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                       Text="Rule Details"
                                       Style="{StaticResource SubheaderTextStyle}"
                                       Margin="0,0,0,16" />

                            <!-- ID -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="ID"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,12" />

                            <!-- Action -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Action"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                      ItemsSource="{x:Static vm:RuleViewModel.AvailableActions}"
                                      SelectedValue="{Binding Action}"
                                      Margin="0,0,0,12" />

                            <!-- Direction -->
                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Text="Direction"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <ComboBox Grid.Row="3" Grid.Column="1"
                                      ItemsSource="{x:Static vm:RuleViewModel.AvailableDirections}"
                                      SelectedValue="{Binding Direction}"
                                      Margin="0,0,0,12" />

                            <!-- Protocol -->
                            <TextBlock Grid.Row="4" Grid.Column="0"
                                       Text="Protocol"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <ComboBox Grid.Row="4" Grid.Column="1"
                                      ItemsSource="{x:Static vm:RuleViewModel.AvailableProtocols}"
                                      SelectedValue="{Binding Protocol}"
                                      Margin="0,0,0,12" />

                            <!-- Process Path -->
                            <TextBlock Grid.Row="5" Grid.Column="0"
                                       Text="Process"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <Grid Grid.Row="5" Grid.Column="1" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Text="{Binding Process, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="Full path to the process executable" />
                                <Button Grid.Column="1"
                                        Width="32"
                                        Margin="4,0,0,0"
                                        Padding="0"
                                        ToolTip="Browse for executable"
                                        Command="{Binding DataContext.BrowseProcessCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                    <TextBlock Text="&#xE838;" FontFamily="Segoe MDL2 Assets" FontSize="16" />
                                </Button>
                                <Button Grid.Column="2"
                                        Width="56"
                                        Margin="4,0,0,0"
                                        Padding="6,0"
                                        ToolTip="Select from running processes"
                                        Command="{Binding DataContext.PickProcessCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,4,0" VerticalAlignment="Center" />
                                        <TextBlock Text="Pick" VerticalAlignment="Center" FontSize="12" />
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Remote IP -->
                            <TextBlock Grid.Row="6" Grid.Column="0"
                                       Text="Remote IP/CIDR"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <StackPanel Grid.Row="6" Grid.Column="1" Margin="0,0,0,12">
                                <TextBox Text="{Binding RemoteIp, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="{Binding RemoteIpError}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RemoteIpError, Converter={StaticResource ObjectToBool}}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding RemoteIpError}"
                                           Foreground="{DynamicResource ErrorBrush}"
                                           FontSize="11"
                                           Margin="0,2,0,0"
                                           Visibility="{Binding RemoteIpError, Converter={StaticResource BoolToVisibility}}" />
                            </StackPanel>

                            <!-- Remote Ports -->
                            <TextBlock Grid.Row="7" Grid.Column="0"
                                       Text="Remote Ports"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <StackPanel Grid.Row="7" Grid.Column="1" Margin="0,0,0,12">
                                <TextBox Text="{Binding RemotePorts, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="{Binding RemotePortsError}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RemotePortsError, Converter={StaticResource ObjectToBool}}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding RemotePortsError}"
                                           Foreground="{DynamicResource ErrorBrush}"
                                           FontSize="11"
                                           Margin="0,2,0,0"
                                           Visibility="{Binding RemotePortsError, Converter={StaticResource BoolToVisibility}}" />
                            </StackPanel>

                            <!-- Local IP -->
                            <TextBlock Grid.Row="8" Grid.Column="0"
                                       Text="Local IP/CIDR"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <StackPanel Grid.Row="8" Grid.Column="1" Margin="0,0,0,12">
                                <TextBox Text="{Binding LocalIp, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="{Binding LocalIpError}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LocalIpError, Converter={StaticResource ObjectToBool}}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding LocalIpError}"
                                           Foreground="{DynamicResource ErrorBrush}"
                                           FontSize="11"
                                           Margin="0,2,0,0"
                                           Visibility="{Binding LocalIpError, Converter={StaticResource BoolToVisibility}}" />
                            </StackPanel>

                            <!-- Local Ports -->
                            <TextBlock Grid.Row="9" Grid.Column="0"
                                       Text="Local Ports"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <StackPanel Grid.Row="9" Grid.Column="1" Margin="0,0,0,12">
                                <TextBox Text="{Binding LocalPorts, UpdateSourceTrigger=PropertyChanged}"
                                         ToolTip="{Binding LocalPortsError}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LocalPortsError, Converter={StaticResource ObjectToBool}}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding LocalPortsError}"
                                           Foreground="{DynamicResource ErrorBrush}"
                                           FontSize="11"
                                           Margin="0,2,0,0"
                                           Visibility="{Binding LocalPortsError, Converter={StaticResource BoolToVisibility}}" />
                            </StackPanel>

                            <!-- Priority -->
                            <TextBlock Grid.Row="10" Grid.Column="0"
                                       Text="Priority"
                                       VerticalAlignment="Top"
                                       Margin="0,0,0,12" />
                            <StackPanel Grid.Row="10" Grid.Column="1" Margin="0,0,0,12">
                                <TextBox Text="{Binding Priority, UpdateSourceTrigger=PropertyChanged}"
                                         Width="100"
                                         HorizontalAlignment="Left" />
                                <Border Background="{DynamicResource InfoBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8"
                                        Margin="0,8,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Evaluation Order"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   Margin="0,0,0,4" />
                                        <TextBlock Text="{Binding PriorityContext}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Text="Higher priority rules are evaluated first. Equal priorities use list order."
                                                   FontSize="10"
                                                   FontStyle="Italic"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Enabled -->
                            <TextBlock Grid.Row="11" Grid.Column="0"
                                       Text="Enabled"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12" />
                            <CheckBox Grid.Row="11" Grid.Column="1"
                                      IsChecked="{Binding Enabled}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,0,12" />

                            <!-- Comment -->
                            <TextBlock Grid.Row="12" Grid.Column="0"
                                       Text="Comment"
                                       VerticalAlignment="Top"
                                       Margin="0,0,0,12" />
                            <TextBox Grid.Row="12" Grid.Column="1"
                                     Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MinHeight="60"
                                     Margin="0,0,0,12" />

                            <!-- JSON Preview -->
                            <Expander Grid.Row="13" Grid.ColumnSpan="2"
                                      Header="JSON Preview"
                                      Margin="0,8,0,0"
                                      IsExpanded="False">
                                <Border Background="{DynamicResource InputBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8"
                                        Margin="0,8,0,0">
                                    <TextBox Text="{Binding JsonPreview, Mode=OneWay}"
                                             IsReadOnly="True"
                                             FontFamily="Consolas"
                                             FontSize="12"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             MinHeight="100"
                                             MaxHeight="250"
                                             Background="Transparent"
                                             BorderThickness="0" />
                                </Border>
                            </Expander>
                            </Grid>
                        </ScrollViewer>

                        <!-- No Rule Selected -->
                        <TextBlock Text="Select a rule to edit"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Visibility="{Binding DataContext.SelectedRule, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBoolToVisibility}}" />
                    </Grid>
                </Border>
            </Grid>

            <!-- Loading Overlay -->
            <Border Style="{StaticResource LoadingOverlayStyle}"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="Loading..."
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="{DynamicResource TextSecondaryBrush}" />
            </Border>
        </Grid>

        <!-- Validation Bar -->
        <Border Grid.Row="2"
                Padding="16,8"
                Visibility="{Binding HasPolicy, Converter={StaticResource BoolToVisibility}}">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                    <Setter Property="BorderThickness" Value="0,1,0,0" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsValid}" Value="False">
                            <Setter Property="Background" Value="#FFF3E0" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Validation Icon -->
                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           FontSize="14">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="OK" />
                            <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsValid}" Value="False">
                                    <Setter Property="Text" Value="!" />
                                    <Setter Property="Foreground" Value="{DynamicResource WarningBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsValidating}" Value="True">
                                    <Setter Property="Text" Value="..." />
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Validation Message -->
                <TextBlock Grid.Column="1"
                           Text="{Binding ValidationMessage}"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
