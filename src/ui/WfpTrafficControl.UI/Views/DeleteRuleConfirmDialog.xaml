<Window x:Class="WfpTrafficControl.UI.Views.DeleteRuleConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Delete Rule"
        Width="500"
        Height="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Warning Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ErrorBrush}"
                CornerRadius="4"
                Padding="16,12"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Warning Icon -->
                <TextBlock Grid.Column="0"
                           Text="&#xE7BA;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="24"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0" />

                <!-- Warning Text -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Delete Firewall Rule"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White" />
                    <TextBlock Text="This action cannot be undone. Review the rule details below before proceeding."
                               FontSize="12"
                               Foreground="White"
                               Opacity="0.9"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Rule Details Card -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}"
                Padding="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Rule ID -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Rule ID:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding RuleId}"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   TextWrapping="Wrap" />
                    </Grid>

                    <!-- Action -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Action:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding RuleAction}"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   FontWeight="SemiBold" />
                    </Grid>

                    <!-- Direction -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Direction:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding RuleDirection}"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                    </Grid>

                    <!-- Protocol -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Protocol:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding RuleProtocol}"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                    </Grid>

                    <!-- Process -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Process:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding RuleProcess}"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   TextWrapping="Wrap" />
                    </Grid>

                    <!-- Remote Endpoint -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Remote:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding RuleRemote}"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   TextWrapping="Wrap" />
                    </Grid>

                    <!-- Local Endpoint -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Local:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding RuleLocal}"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   TextWrapping="Wrap" />
                    </Grid>

                    <!-- Priority -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Priority:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding RulePriority}"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                    </Grid>

                    <!-- Comment -->
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Comment:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Top" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding RuleComment}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   FontStyle="Italic" />
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Cancel Button (Default Focus) -->
            <Button Grid.Column="1"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Content="Cancel"
                    Padding="24,8"
                    Margin="0,0,8,0"
                    IsCancel="True"
                    IsDefault="True"
                    Click="CancelButton_Click" />

            <!-- Delete Button -->
            <Button Grid.Column="2"
                    Style="{StaticResource DangerButtonStyle}"
                    Padding="24,8"
                    Click="DeleteButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE74D;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center" />
                    <TextBlock Text="Delete Rule"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
