<UserControl x:Class="WfpTrafficControl.UI.Controls.SearchFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:WfpTrafficControl.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="300">

    <UserControl.Resources>
        <converters:StringNotEmptyConverter x:Key="StringNotEmpty" />
    </UserControl.Resources>

    <Grid>
        <!-- Search Text Box -->
        <Border Background="{DynamicResource InputBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Search Icon -->
                <TextBlock Grid.Column="0"
                           Text="Search"
                           FontSize="11"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0" />

                <!-- Text Input -->
                <TextBox x:Name="SearchTextBox"
                         Grid.Column="1"
                         Text="{Binding SearchText, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalAlignment="Center" />

                <!-- Placeholder Text -->
                <TextBlock Grid.Column="1"
                           Text="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Clear Button -->
                <Button Grid.Column="2"
                        Click="ClearButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="4,0"
                        VerticalAlignment="Center"
                        ToolTip="Clear search">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SearchText, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StringNotEmpty}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="X"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
