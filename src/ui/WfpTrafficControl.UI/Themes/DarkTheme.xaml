<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->

    <!-- Primary accent colors (same across themes) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#60CDFF" />
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#4CC2FF" />

    <!-- Status colors (same across themes) -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#6CCB5F" />
    <SolidColorBrush x:Key="WarningBrush" Color="#FCE100" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#FF6B6B" />
    <SolidColorBrush x:Key="OnlineBrush" Color="#6CCB5F" />
    <SolidColorBrush x:Key="OfflineBrush" Color="#FF6B6B" />

    <!-- Background colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#202020" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2D2D2D" />
    <SolidColorBrush x:Key="BorderBrush" Color="#3D3D3D" />

    <!-- Text colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A0A0A0" />

    <!-- Interactive colors -->
    <SolidColorBrush x:Key="SelectionBrush" Color="#264F78" />
    <SolidColorBrush x:Key="SelectionBorderBrush" Color="#60CDFF" />
    <SolidColorBrush x:Key="HoverBrush" Color="#383838" />

    <!-- Button colors -->
    <SolidColorBrush x:Key="SecondaryButtonHoverBrush" Color="#264F78" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#3D3D3D" />
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#666666" />
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#FF4444" />
    <SolidColorBrush x:Key="TabHoverBrush" Color="#383838" />

    <!-- Input colors -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#1A1A1A" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="#3D3D3D" />
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="#60CDFF" />

    <!-- DataGrid colors -->
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#383838" />
    <SolidColorBrush x:Key="DataGridAlternateRowBrush" Color="#262626" />
    <SolidColorBrush x:Key="DataGridRowBrush" Color="#2D2D2D" />

</ResourceDictionary>
