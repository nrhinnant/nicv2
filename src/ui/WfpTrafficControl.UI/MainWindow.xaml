<Window x:Class="WfpTrafficControl.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WfpTrafficControl.UI.Views"
        xmlns:vm="clr-namespace:WfpTrafficControl.UI.ViewModels"
        xmlns:converters="clr-namespace:WfpTrafficControl.UI.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="WFP Traffic Control"
        Height="700" Width="1000"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Navigation Tabs -->
            <RowDefinition Height="Auto" />
            <!-- Content -->
            <RowDefinition Height="*" />
            <!-- Status Bar -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="WFP Traffic Control"
                               Style="{DynamicResource HeaderTextStyle}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="Administrator"
                               Foreground="{DynamicResource WarningBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Emergency Rollback Button -->
                    <Button Content="Emergency Rollback"
                            Style="{DynamicResource DangerButtonStyle}"
                            Command="{Binding EmergencyRollbackCommand}"
                            Padding="16,6"
                            FontWeight="SemiBold"
                            Margin="0,0,12,0"
                            ToolTip="Immediately remove all filters and restore connectivity" />

                    <!-- Tools Dropdown Button with Popup -->
                    <Grid Margin="0,0,8,0">
                        <Button x:Name="ToolsButton"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Click="ToolsButton_Click"
                                Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Tools" VerticalAlignment="Center" />
                                <TextBlock Text=" â–¼" FontSize="10" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <Popup x:Name="ToolsMenuPopup"
                               PlacementTarget="{Binding ElementName=ToolsButton}"
                               Placement="Bottom"
                               StaysOpen="False"
                               AllowsTransparency="True"
                               PopupAnimation="Fade">
                            <Border Background="{DynamicResource CardBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="4">
                                <StackPanel Orientation="Vertical" MinWidth="220">
                                    <!-- Section 1: Policy Tools -->
                                    <TextBlock Text="Policy Tools"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="12,8,12,4" />
                                    <Button Content="Simulate Connection"
                                            Command="{Binding OpenRuleSimulatorCommand}"
                                            Style="{DynamicResource MenuItemButtonStyle}"
                                            ToolTip="Test if a connection would be allowed or blocked" />
                                    <Button Content="Compare Policies"
                                            Command="{Binding OpenPolicyDiffCommand}"
                                            Style="{DynamicResource MenuItemButtonStyle}"
                                            ToolTip="Compare two policy files side by side" />
                                    <Button Content="Policy History"
                                            Command="{Binding OpenPolicyHistoryCommand}"
                                            Style="{DynamicResource MenuItemButtonStyle}"
                                            ToolTip="View and revert to previous policy versions" />

                                    <Separator Margin="8,4" Background="{DynamicResource BorderBrush}" />

                                    <!-- Section 2: Integration -->
                                    <TextBlock Text="Integration"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="12,4,12,4" />
                                    <Button Content="Syslog/SIEM Settings"
                                            Command="{Binding OpenSyslogSettingsCommand}"
                                            Style="{DynamicResource MenuItemButtonStyle}"
                                            ToolTip="Configure syslog/SIEM export settings" />
                                    <Button Content="Network Profiles"
                                            Command="{Binding OpenNetworkProfilesCommand}"
                                            Style="{DynamicResource MenuItemButtonStyle}"
                                            ToolTip="Manage network profiles for automatic policy switching" />

                                    <Separator Margin="8,4" Background="{DynamicResource BorderBrush}" />

                                    <!-- Section 3: Discovery -->
                                    <TextBlock Text="Discovery"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="12,4,12,4" />
                                    <Button Content="Discover Applications"
                                            Command="{Binding OpenApplicationDiscoveryCommand}"
                                            Style="{DynamicResource MenuItemButtonStyle}"
                                            ToolTip="Discover installed applications and suggest firewall rules" />
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Grid>

                    <!-- Theme Toggle Button (Icon Only) -->
                    <Button Content="{Binding ThemeIcon}"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Style="{DynamicResource ThemeToggleButtonStyle}"
                            Command="{Binding ToggleThemeCommand}"
                            Width="36"
                            Height="36"
                            Margin="0,0,8,0"
                            ToolTip="Toggle between light and dark theme" />

                    <!-- Refresh Button (Icon Only) -->
                    <Button Content="&#xE72C;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Style="{DynamicResource ThemeToggleButtonStyle}"
                            Command="{Binding RefreshStatusCommand}"
                            Width="36"
                            Height="36"
                            ToolTip="Refresh service status" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Navigation Tabs -->
        <TabControl Grid.Row="1" Grid.RowSpan="2"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource NavTabStyle}" />
            </TabControl.Resources>

            <!-- Dashboard Tab -->
            <TabItem Header="Dashboard">
                <views:DashboardView DataContext="{Binding DashboardViewModel}" />
            </TabItem>

            <!-- Policy Editor Tab -->
            <TabItem Header="Policy Editor">
                <views:PolicyEditorView DataContext="{Binding PolicyEditorViewModel}" />
            </TabItem>

            <!-- Block Rules Tab -->
            <TabItem Header="Block Rules">
                <views:BlockRulesView DataContext="{Binding BlockRulesViewModel}" />
            </TabItem>

            <!-- Logs Tab -->
            <TabItem Header="Logs">
                <views:LogsView DataContext="{Binding LogsViewModel}" />
            </TabItem>

            <!-- Connections Tab -->
            <TabItem Header="Connections">
                <views:ConnectionMonitorView DataContext="{Binding ConnectionMonitorViewModel}" />
            </TabItem>

            <!-- Analytics Tab -->
            <TabItem Header="Analytics">
                <views:AnalyticsDashboardView DataContext="{Binding AnalyticsDashboardViewModel}" />
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Connection Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,24,0">
                    <Ellipse Width="10" Height="10"
                             VerticalAlignment="Center"
                             Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{DynamicResource OfflineBrush}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="{DynamicResource OnlineBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Offline" />
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Text" Value="Connected" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Filter Count -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Filters: "
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding FilterCount}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Last Operation -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Last update: "
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding LastOperationTime}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Service Version -->
                <TextBlock Grid.Column="4"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center">
                    <Run Text="Service v" />
                    <Run Text="{Binding ServiceVersion, Mode=OneWay}" />
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
