<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <!--
    Directory structure for WfpTrafficControl installation.

    Installation layout:
      C:\Program Files\WfpTrafficControl\
        WfpTrafficControl.Service.exe   (Windows Service)
        wfpctl.exe                       (CLI tool)
        appsettings.json                 (Service configuration)
        Shared.dll                       (Shared library)
        *.deps.json, *.runtimeconfig.json (Runtime config)
        sample-policy.json               (Example policy file)
  -->

  <Fragment>
    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="INSTALLFOLDER" Name="WfpTrafficControl" />
    </StandardDirectory>
  </Fragment>

</Wix>
